<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="BaseToolbarTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textBlue</item>
    </style>


    <style name="SmallTextSizeStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SmallWhiteTextSizeStyle" parent="SmallTextSizeStyle">
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="SmallBlackTextSizeStyle" parent="SmallTextSizeStyle">
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="SmallGrayTextSizeStyle" parent="SmallTextSizeStyle">
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="SmallBlueTextSizeStyle" parent="SmallTextSizeStyle">
        <item name="android:textColor">@color/textBlue</item>
    </style>

    <style name="SmallRedTextSizeStyle" parent="SmallTextSizeStyle">
        <item name="android:textColor">@color/textRed</item>
    </style>

    <style name="NormalTextSizeStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NormalWhiteTextSizeStyle" parent="NormalTextSizeStyle">
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="NormalBlackTextSizeStyle" parent="NormalTextSizeStyle">
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="NormalGrayTextSizeStyle" parent="NormalTextSizeStyle">
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="NormalBlueTextSizeStyle" parent="NormalTextSizeStyle">
        <item name="android:textColor">@color/textBlue</item>
    </style>

    <style name="NormalRedTextSizeStyle" parent="NormalTextSizeStyle">
        <item name="android:textColor">@color/textRed</item>
    </style>

    <style name="MiddleTextSizeStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MiddleWhiteTextSizeStyle" parent="MiddleTextSizeStyle">
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="MiddleBlackTextSizeStyle" parent="MiddleTextSizeStyle">
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="MiddleGrayTextSizeStyle" parent="MiddleTextSizeStyle">
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="MiddleBlueTextSizeStyle" parent="MiddleTextSizeStyle">
        <item name="android:textColor">@color/textBlue</item>
    </style>

    <style name="LargeTextSizeStyle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="LargeBlackTextSizeStyle" parent="LargeTextSizeStyle">
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="LargeGrayTextSizeStyle" parent="LargeTextSizeStyle">
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="LargeWhiteTextSizeStyle" parent="LargeTextSizeStyle">
        <item name="android:textColor">@color/textWhite</item>
    </style>


    <style name="hugeTextSizeStyle">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="hugeWhiteTextSizeStyle" parent="hugeTextSizeStyle">
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="hugeBlackTextSizeStyle" parent="hugeTextSizeStyle">
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="hugeGrayTextSizeStyle" parent="hugeTextSizeStyle">
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="hugeBlueTextSizeStyle" parent="hugeTextSizeStyle">
        <item name="android:textColor">@color/textBlue</item>
    </style>


    <style name="vertical_parting_line">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="horizontal_parting_line">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="horizontal_parting_line_blue">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/textBlue</item>
    </style>

</resources>
