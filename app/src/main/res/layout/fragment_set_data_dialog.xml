<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginStart="15dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/tv_set_data_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="@color/textBlack"/>

            <ImageView
                android:src="@mipmap/ic_close"
                android:id="@+id/iv_set_data_dialog_close"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider" />

    <LinearLayout
        android:background="@drawable/bg_rectangle_gray_frame"
        android:padding="10dp"
       android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/edt_set_data_dialog_content"
            style="@style/NormalBlackTextSizeStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/input_value"
            android:singleLine="true"
            android:textColorHint="@color/hintSearch"/>

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:id="@+id/tv_set_data_dialog_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/NormalBlackTextSizeStyle"/>
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/textBlue" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/NormalBlueTextSizeStyle"
                android:id="@+id/btn_set_data_dialog_cancel"
                android:text="@string/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                />

            <Button
                android:text="@string/save"
                style="@style/NormalWhiteTextSizeStyle"
                android:id="@+id/btn_set_data_dialog_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/textBlue"/>


        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
