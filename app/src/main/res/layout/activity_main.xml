<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">


    <android.support.design.widget.TabLayout
        android:id="@+id/main_bottom_tabs"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        app:tabBackground="@null"
        app:tabGravity="fill"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"/>


    <View
        android:id="@+id/main_bottom_divide"
        style="@style/horizontal_parting_line"
        android:layout_above="@id/main_bottom_tabs"></View>

    <android.support.v4.view.ViewPager
        android:id="@+id/main_bottom_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_bottom_divide"/>

</RelativeLayout>
